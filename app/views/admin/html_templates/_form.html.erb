<%= form_for @html_template, :url => (@html_template.id.present? ? admin_html_template_path(@html_template) : admin_html_templates_path), :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
<%= f.hidden_field :status, :value => "1" %>
  <div class="control-group">
    <%= f.label :name, "*名称:", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :placeholder => "必填", :maxlength => 255 %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :type_id, "类型:", :class => "control-label" %>
    <div class="controls">
      <%= f.select :type_id, HtmlTemplate.type_hash.collect {|k,v| [v,k] } %>
    </div>
  </div>
  
  <div class="control-group">
      <%= label :upload_path_file, "模板:", :class => "control-label" %>
      <div class="controls">
		  <input type="file" name="upload_path_file" id="upload_path_file">
      </div>
  </div>
    <div class="form-actions">
    <%= f.submit "保存", :class => 'btn btn-primary' %>
    <%= link_to '取消', admin_html_templates_path, :class => 'btn' %>
  </div>
<% end -%> 
