<%= form_for @origin, :url => (@origin.id.present? ? admin_origin_path(@origin) : admin_origins_path), :html => { :class => 'form-horizontal' } do |f| %>
<div class="control-group">
	<%= f.label :name, "*名称:", :class => "control-label" %>
	<div class="controls">
	  <%= f.text_field :name %>
	</div>
</div>
<div class="control-group">
	<%= f.label :addr, "*地址:", :class => "control-label" %>
	<div class="controls">
	  <%= f.text_field :addr, :placeholder => "例：http://www.domain.com" %>
	</div>
</div>
    <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to '取消', admin_origins_path, :class => 'btn' %>
  </div>
<% end -%> 
