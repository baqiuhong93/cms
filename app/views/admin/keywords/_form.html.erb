<%= form_for @keyword, :url => (@keyword.id.present? ? admin_keyword_path(@keyword) : admin_keywords_path), :html => { :class => 'form-horizontal' } do |f| %>
<div class="control-group">
	<%= f.label :name, "*名称:", :class => "control-label" %>
	<div class="controls">
	  <%= f.text_field :name %>
	</div>
</div>
<div class="control-group">
	<%= f.label :addr, "*地址:", :class => "control-label", :maxlength => 255 %>
	<div class="controls">
	  <%= f.text_field :addr, :placeholder => "例：http://www.domain.com", :maxlength => 255 %>
	</div>
</div>
<div class="control-group">
	<%= f.label :level, "*权重:", :class => "control-label", :maxlength => 255 %>
	<div class="controls">
	  <%= f.select :level, 1..10 %>
	</div>
</div>
    <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to '取消', admin_keywords_path, :class => 'btn' %>
  </div>
<% end -%> 
