<%= form_for @domain, :url => (@domain.id.present? ? admin_domain_path(@domain) : admin_domains_path), :html => { :class => 'form-horizontal' } do |f| %>
<div class="control-group">
	<%= f.label :name, "*名称:", :class => "control-label" %>
	<div class="controls">
	   <%= f.text_field :name, :maxlength => 255 %>
	</div>
</div>
<div class="control-group">
	<%= f.label :addr, "*域名:", :class => "control-label" %>
	<div class="controls">
	   <%= f.text_field :addr, :maxlength => 255, :placeholder => "例：abc.domain.com" %>
	</div>
</div>
    <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to '取消', admin_domains_path, :class => 'btn' %>
  </div>
<% end -%> 
